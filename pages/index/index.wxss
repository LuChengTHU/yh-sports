/**index.wxss**/
.fullContainer {
  height: 100vh;
  width: 100vw;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background-image: url('https://i.loli.net/2017/09/19/59c0630f78107.png');
  background-size: 100% 100%;
} 

.halfContainer {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 50%;
  width: 100%;
}

.upperContainer {
  align-items: center;
  flex-direction: column;
  display: flex;
  margin-top: 63rpx;
  height: 100%;
  width: 100%;
}

.contentContainer {
  align-items: center;
  flex-direction: column;
  display: flex;
  height: 25%;
  width: 100%;
  margin-bottom: 50rpx;
}

.first_text_container {
  align-items: center;
  justify-content: center;
  flex-direction: column;
  display: flex;
  width: 45%;
  height: 30%;
}

.second_text_container {
  align-items: center;
  justify-content: center;
  flex-direction: column;
  display: flex;
  width: 50%;
  height: 30%;
}

.first_text {
  background-color: transparent;
  border-color: transparent;
  height: 100%;
  width: 100%;
}

.second_text {
  height: 100%;
  width: 100%;
}

.inputContainer {
  margin-bottom: 20rpx;
  margin-top: 30rpx;
  width: 55%;
  height: 40%;
  background-color: rgba(177,193,194,0.4);
  border-radius: 10rpx;
  align-items: center;
  flex-direction: row;
  display: flex;
}

.input_padding {
  padding-left: 15rpx;
  padding-right: 15rpx;
  padding-bottom: 6rpx;
  font-size: 30rpx;
  color: white;
  position:relative;
  animation-duration:2s;
  animation-timing-function:linear;
  animation-iteration-count:infinite;
	animation-direction:alternate;
	animation-play-state:running;
}

.input {
  width: 98%;
  text-align: center;
  font-size: 25rpx;
}

.input_left {
  animation-name:left_animation;
}

@keyframes left_animation
{
	0%   {left:0px;}
	50%  {left:20rpx;}
	100% {left:0px;}
}

.input_right {
  animation-name:right_animation;
}

@keyframes right_animation
{
	0%   {left:0px;}
	50%  {left:-20rpx;}
	100% {left:0px;}
}